<UserControl
	x:Class="Mntone.MonitorInformation.Views.Monitor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:Mntone.MonitorInformation.Views">
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="4"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="4"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="120"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Row="0" Text="No. "/>
		<TextBox Grid.Row="0" Grid.Column="1" Text="{Binding No, Mode=OneTime}"/>

		<TextBlock Grid.Row="2" Text="Area: "/>
		<TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Area, Mode=OneTime}"/>

		<TextBlock Grid.Row="4" Text="System dpi: "/>
		<TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SystemDpi, Mode=OneTime}"/>
	</Grid>
</UserControl>
